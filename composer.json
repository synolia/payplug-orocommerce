{
    "name": "payplug/payplug-orocommerce",
    "description": "Module PayPlug pour OroCommerce",
    "license": "OSL-3.0",
    "require": {
        "payplug/payplug-php": "^3.1",
        "oro/commerce": "^4.1.0"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.orocrm.com"
        }
    },
    "autoload": {
        "psr-4": {"Payplug\\Bundle\\PaymentBundle\\": "src"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpmd/phpmd": "2.6.*",
        "squizlabs/php_codesniffer": "3.3.*",
        "phpunit/phpunit": "6.5.*",
        "sebastian/phpcpd": "3.0.*",
        "phpro/grumphp": "^0.16.0",
        "friendsofphp/php-cs-fixer": "2.12.*",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpstan/phpstan-symfony": "^0.11.6"
    }
}
